{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "preact": [
        "node_modules/preact"
      ],
      "@": [
        "src"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "es2017",
      "dom.iterable",
      "scripthost"
    ],
    "jsx": "preserve",
    "allowJs": true
  }
}
